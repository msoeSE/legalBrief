commands:
    01setup_swap:
        test: test ! -e /var/swapfile
        command: |
            /bin/dd if=/dev/zero of=/var/swapfile bs=1M count=1024
            /bin/chmod 600 /var/swapfile
            /sbin/mkswap /var/swapfile
            /sbin/swapon /var/swapfile
    02create_logging_dir:
        test: -d "/var/log/brief-assistant"
        command: |
            mkdir /var/log/brief-assistant
            chmod -R 770 /var/log/brief-assistant